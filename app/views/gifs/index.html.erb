<div class="jumbotron">
  <h1>Sports Gifs</h1>
  <p>When words aren't enough</p>
  <p><a class="btn btn-primary btn-lg" role="button">Learn more</a></p>
</div>

<% @gifs.each do |gif| %>


<div class="A">

  <div class="panel panel-warning">
    <div class="panel-heading"><%= gif.title %></div>
    <div class="panel-body">
      <img src="<%= gif.image_url %>">
    </div>
   
  </div>
</div>

<% end %>







<h1>Listing gifs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image url</th>
      <th>Description</th>
      <th>Tags</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @gifs.each do |gif| %>
      <tr>
        <td><%= gif.title %></td>
        <td><%= gif.image_url %></td>
        <td><%= gif.description %></td>
        <td><%= gif.tags %></td>
        <td><%= link_to 'Show', gif %></td>
        <td><%= link_to 'Edit', edit_gif_path(gif) %></td>
        <td><%= link_to 'Destroy', gif, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

